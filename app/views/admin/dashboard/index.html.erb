<div class="container mx-auto px-4 sm:px-6 lg:px-8 my-10">
    <div class="max-w-md mx-auto bg-white p-8 shadow-lg rounded-lg">
        <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-semibold">Admin Dashboard</h1>
            <form
                action="<%= destroy_user_session_path %>"
                accept-charset="UTF-8"
                method="delete"
            >
                <input
                    type="hidden"
                    name="authenticity_token"
                    value="<%= form_authenticity_token %>"
                />
                <input
                    type="submit"
                    value="Log out"
                    class="text-red-500 hover:text-red-700 underline"
                />
            </form>
        </div>
        <p>Welcome to the admin dashboard, <%= current_user.email %>!</p>

        
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
    </div>
</div>


